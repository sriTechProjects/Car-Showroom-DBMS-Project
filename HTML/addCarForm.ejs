<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShowRoom Register</title>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <style>
        .new-car-image-container{
            position: relative;
            width: 9rem;
            height: 9rem;
            border-radius: 50%;
            /* border: 1px solid #ccc; */
            margin: 0 auto;
            margin-bottom: 1rem;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 3px 0px, rgba(0, 0, 0, 0.06) 0px 1px 2px 0px;
        }
        .login-form-overlay form{
            gap: 0.6rem 0;
        }
        .new-car-image-box{
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;   
        }
        .new-car-image-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .new-add-btn{
            position: absolute;
            bottom: 0.5rem;
            right:  -0.5rem;
            height: 3rem;
            width: 3rem;
            border-radius: 50%;
            background-color: #BC7FCD;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .new-add-btn:hover {
            background-color: hsl(152, 63%, 43%);
        }
        .new-add-btn i{
            font-size: 1.5rem;
            color: #fff;
            font-weight: 600;
        }
        .file-input {
            display: none;
        }
        
    </style>
    
</head>
<body>
    <div class="login-form-container showroom-login-container">
        <div class="login-form-overlay">
            <form action="/addCarForm" method="post" enctype="multipart/form-data">
                <h3>Insert Car Details </h3>

                <div class="new-car-image-container">
                    <div class="new-car-image-box" id="new-car-image-box"></div>
                    <div class="new-add-btn" id="new-add-btn"><i class="fa-solid fa-plus"></i></div>
                    <input type="file" id="file-input" class="file-input" accept="image/*" name="carImage">
                </div>

                <input type="text" placeholder="Car Name" name="car_name" class="box">
                <div style="display: flex; align-items: center; gap: 0 1rem;">
                    <input type="number" placeholder="Mileage" name="mileage" class="box">
                    <input type="number" placeholder="top speed" name="topspeed" class="box">
                </div>
                
                <div style="display: flex; align-items: center; gap: 0 1rem;">
                    <input type="number" placeholder="Year of Manufacture" name="year" class="box">
                    <input type="number" placeholder="airbags" name="airbags" class="box">
                    <input type="number" placeholder="capacity" name="capacity" class="box">
                </div>
                
                <input type="text" placeholder="Color" name="color" class="box">
                <div style="display: flex; align-items: center; gap: 0 1rem;">
                    <input type="number" placeholder="Price" name="price" class="box">
                    <input type="number" placeholder="MRP" name="mrp" class="box">
                </div>
                <input type="hidden" name="showroom_id" value="<%= showroom_id %>">
                <input type="hidden" name="showroom_id" value="<%= showroom_email %>">

                <input type="submit" value="Add" class="btn">
            </form>
        </div>
    </div>

    <script>
        document.getElementById('new-add-btn').addEventListener('click', function() {
            document.getElementById('file-input').click();
        });

        document.getElementById('file-input').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    const imageBox = document.getElementById('new-car-image-box');
                    imageBox.innerHTML = '';
                    imageBox.appendChild(img);
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>